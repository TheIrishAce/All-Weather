<p id="notice"><%= notice %></p>

<h1>Blogposts</h1>

<section>
  <% @blogposts.each do |blogpost| %>
    <div>
      <h2><%= blogpost.title %></h2>
      <br>Category: <small><%= blogpost.category %></small>
      <br>Author: <b><%= blogpost.author %></b>
      <br>Date Created: <%= blogpost.created_at %>
      <br><%= image_tag blogpost.image_url%>
      <p><%= blogpost.content %></p>
    </div>
  <% end %>
</section>

