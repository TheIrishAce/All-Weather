<head>
  <%= render partial: "shared/navbar" %>
</head>

<p id="notice"><%= notice %></p>

<h1>Blogposts</h1>

<body>
  <section>
    <% @blogposts.each do |blogpost| %>
      <div class="container bg-light border mb-4">
        <br>
        <div class="d-flex flex-row">
          <h3><%= blogpost.title %></h3>
        </div>
        <div class="d-flex flex-row">
          <div class="p-2">Category: <b><%= blogpost.category %></b></div>
          <div class="p-2">Author: <b><%= blogpost.author %></b></div>
          <div class="p-2"><i>Date Created: <%= blogpost.created_at %></i></div>
        </div>
        <div class="d-flex flex-row">
          <div class="d-flex flex-col">
            <div class="p-2"><%= image_tag (blogpost.image_url), size: "260x180"%></div>
          </div>
          <div class="d-flex flex-col">
            <div class="p-2"><p><%= blogpost.content %></p></div>
          </div>
        </div>
      </div>
    <% end %>
    <br>
  </section>
  <p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Button with data-target
  </button>
  </p>
  
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Content</th>
            <th>Author</th>
            <th>Image url</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @blogposts.each do |blogpost| %>
            <tr>
              <td><%= blogpost.title %></td>
              <td><%= blogpost.category %></td>
              <td><%= blogpost.content %></td>
              <td><%= blogpost.author %></td>
              <td><%= blogpost.image_url %></td>
              <td><%= link_to 'Show', blogpost %></td>
              <td><%= link_to 'Edit', edit_blogpost_path(blogpost) %></td>
              <td><%= link_to 'Destroy', blogpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  
</body>

<br>

<%= link_to 'New Blogpost', new_blogpost_path %>

<footer>
  <%= render partial: "shared/footer" %>
</footer>
