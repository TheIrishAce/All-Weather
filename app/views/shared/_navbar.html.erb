<div class="row justify-content-center">
  <div class="d-flex justify-content-end pt-2 border">
    <div class="d-flex">
      <div class="col">
        <div class="d-flex">
          <% if user_signed_in? %>
            <p>Signed in as... <%=current_user.email %></p>
            <%=button_to 'Sign out', destroy_user_session_path, :method => :delete%>
          <% else %>
            <%=link_to 'Register', new_user_registration_path%> or
            <%=link_to 'Sign in', new_user_session_path%>
          <% end %>
        </div>
        <div class="d-flex">
          <% if current_user.admin? %>
            <p class="text-success">Admin Account</p>
          <% else %>
            <p class="text-success">User Account</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






